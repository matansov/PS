<Window x:Class="Exercise4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TextBox x:Name="txtAngle" HorizontalAlignment="Center" Margin="0,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="30"/>
        <Rectangle x:Name="recObj" HorizontalAlignment="Center" Height="200" Margin="0,200,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnAction" Content="Button" HorizontalAlignment="Center" Height="30" Margin="0,130,0,0" VerticalAlignment="Top" Width="100" Click="btnAction_Click"/>
        <Label x:Name="lblError" Content="Грешна стойност" HorizontalAlignment="Center" Height="35" Margin="0,90,0,0" VerticalAlignment="Top" Width="120" FontSize="14" Visibility="Hidden"/>
        <ListBox HorizontalAlignment="Left" Height="410" Margin="10,0,0,0" VerticalAlignment="Center" Width="110"/>


    </Grid>
</Window>
